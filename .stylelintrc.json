{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "unit-allowed-list": [
      ["em", "ms", "deg", "%", "fr"],
      {
        "ignoreProperties": {
          "px": [
            "font-size",
            "filter",
            "backdrop-filter",
            "box-shadow",
            "/^--gj/"
          ]
        }
      }
    ],
    "custom-property-pattern": [
      "^gj([A-Z0-9][a-z0-9]*)+$",
      {
        "message": "Expected custom property name to be prefixed with 'gj'."
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ]
}
