{
    "name": "gojabako.zone",
    "siteName": "Gojabako Zone",
    "authorName": "伊藤 慶 - Kei Ito",
    "homepage": "https://gojabako.zone/",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "setup": "run-s setup:*",
        "setup:tsc": "tsc --project tsconfig.tool.json",
        "setup:copy": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} src-tool/copy.ts",
        "setup:mjs": "npx @nlib/change-ext --directory .tool --mapping js/mjs",
        "setup:resolve": "npx @nlib/resolve-imports --include \".tool/**/*.mjs\"",
        "updatePageList": "node .tool/build/pageList.mjs",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "npx jest",
        "dev": "run-s updatePageList dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "esifycss --css=src/app.css --ext=.ts --watch src",
        "dev:watch:next": "node server.mjs",
        "build": "run-s setup build:*",
        "build:css": "esifycss --css=src/app.css --ext=.ts src",
        "build:next": "next build",
        "start": "NODE_ENV=production node server.mjs",
        "lint": "run-s lint:*",
        "lint:eslint": "next lint"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.25",
        "@nlib/githooks": "0.1.0",
        "@types/jest": "27.0.2",
        "@types/react": "17.0.27",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "esifycss": "1.4.35",
        "esifycss-webpack-plugin": "0.1.3",
        "eslint-config-next": "11.1.2",
        "eslint-plugin-jest": "24.5.2",
        "htmlparser2": "7.1.2",
        "jest": "27.2.5",
        "lint-staged": "11.2.1",
        "lowlight": "2.3.0",
        "mdast-util-footnote": "1.0.0",
        "mdast-util-from-markdown": "1.0.4",
        "mdast-util-gfm": "2.0.0",
        "micromark-extension-footnote": "1.0.2",
        "micromark-extension-gfm": "2.0.0",
        "next": "11.1.2",
        "npm-run-all": "4.1.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "ts-jest": "27.0.5",
        "ts-node": "^10.2.1"
    },
    "browserslist": [
        ">5%",
        "not ie 11",
        "not dead"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src",
            "<rootDir>/src-tool"
        ],
        "moduleFileExtensions": [
            "cjs",
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault))"
        ],
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "./next-env.d.ts",
            "./.tool/**/*"
        ],
        "overrides": [
            {
                "files": [
                    "./*",
                    "./loader/**/*",
                    "./src-tool/**/*"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "@nlib/no-globals": "off"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "@nlib/no-globals": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.tsx": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ],
        "*.jsx": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
