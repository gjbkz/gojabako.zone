{
    "name": "gojabako.zone",
    "siteName": "Gojabako Zone",
    "version": "0.0.0",
    "private": true,
    "author": {
        "name": "伊藤　慶 / Kei Ito",
        "email": "kei.itof@gmail.com"
    },
    "scripts": {
        "test": "jest",
        "dev": "run-s build:loader dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "esifycss --css=src/app.css --ext=.ts --watch src",
        "dev:watch:next": "next dev",
        "build": "run-s build:*",
        "build:loader": "run-s build:loader:*",
        "build:loader:tsc": "tsc --project tsconfig.loader.json",
        "build:loader:mjs": "npx @nlib/change-ext --directory loader --mapping js/mjs",
        "build:loader:resolve": "npx @nlib/resolve-imports --directory loader --ext mjs",
        "build:css": "esifycss --css=src/app.css --ext=.ts src",
        "build:next": "next build",
        "start": "next start",
        "lint": "run-s build:css lint:*",
        "lint:eslint": "next lint"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.25",
        "@nlib/githooks": "0.1.0",
        "@types/jest": "27.0.2",
        "@types/react": "17.0.24",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "esifycss": "1.4.35",
        "esifycss-webpack-plugin": "0.1.3",
        "eslint-config-next": "11.1.2",
        "eslint-plugin-jest": "24.5.0",
        "jest": "27.2.4",
        "lint-staged": "11.1.2",
        "lowlight": "2.3.0",
        "mdast-util-from-markdown": "1.0.2",
        "mdast-util-gfm": "1.0.0",
        "micromark-extension-gfm": "1.0.0",
        "next": "11.1.2",
        "npm-run-all": "4.1.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "ts-jest": "27.0.5",
        "ts-node": "^10.2.1"
    },
    "browserslist": [
        ">5%",
        "not ie 11",
        "not dead"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src",
            "<rootDir>/loader"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault))"
        ]
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts",
            "loader/**/*.mjs"
        ],
        "overrides": [
            {
                "files": [
                    "./*",
                    "./loader/**/*"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "@nlib/no-globals": "off"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
