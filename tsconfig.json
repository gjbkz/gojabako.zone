{
  "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "declaration": true,
      "sourceMap": false,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "preserve",
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "isolatedModules": true
  },
  "include": [
      "**/*.ts",
      "**/*.tsx"
  ],
  "exclude": [
      "node_modules"
  ]
}
