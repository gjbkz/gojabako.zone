{
  "name": "@gjbkz/gojabako.zone",
  "homepage": "https://gojabako.zone/",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "run-s test:*",
    "test:type": "tsc --noEmit",
    "test:jest": "npx jest",
    "dev": "run-p dev:*",
    "dev:css": "typed-scss-modules app --watch --logLevel info",
    "dev:next": "next",
    "build": "run-s build:*",
    "build:css": "typed-scss-modules app --logLevel error",
    "build:next": "next build",
    "start": "NODE_ENV=production node server.mjs",
    "lint": "run-s lint:*",
    "lint:next": "next lint",
    "lint:eslint": "eslint src *.mjs"
  },
  "dependencies": {
    "@nlib/eslint-config": "3.20.2",
    "@nlib/githooks": "0.2.0",
    "@nlib/lint-commit": "1.0.1",
    "@nlib/tsm": "0.1.0",
    "@nlib/typing": "1.1.0",
    "@types/node": "20.5.8",
    "@types/react": "18.2.21",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "eslint": "8.48.0",
    "eslint-config-next": "13.4.19",
    "jose": "4.14.4",
    "lint-staged": "14.0.1",
    "meilisearch": "0.34.1",
    "next": "13.4.12",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "sass": "1.66.1",
    "typed-scss-modules": "7.1.4",
    "typescript": "5.2.2"
  },
  "browserslist": [
    ">10%"
  ],
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@nlib/eslint-config"
    ],
    "ignorePatterns": [
      "next-env.d.ts",
      "cli/**",
      "old-src/**"
    ],
    "rules": {
      "no-unused-private-class-members": "off",
      "import/dynamic-import-chunkname": "off",
      "import/no-default-export": "off",
      "import/no-relative-parent-imports": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "**/*.scss"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.test.*"
        ],
        "rules": {
          "max-lines-per-function": "off",
          "@typescript-eslint/no-floating-promises": "off"
        }
      },
      {
        "files": [
          "src/pages/**/*.tsx"
        ],
        "rules": {
          "import/no-unassigned-import": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
