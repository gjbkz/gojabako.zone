{
    "name": "gojabako.zone",
    "homepage": "https://gojabako.zone/",
    "version": "0.0.0",
    "private": true,
    "type": "commonjs",
    "scripts": {
        "test": "run-s build-meta test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "npx jest",
        "dev": "run-s build-meta dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "esifycss --css=pages/app.css --ext=.ts --watch packages/components",
        "dev:watch:next": "ts-node --project tsconfig.cli.json server.ts",
        "dev-next": "run-s build-meta dev-next:*",
        "dev-next:watch": "next dev",
        "build": "run-s build:*",
        "build:tool": "run-s build:tool:*",
        "build:tool:cli": "ts-node --project tsconfig.cli.json packages/build/cli.ts",
        "build:tool:loaders": "node .output/build/loaders.mjs",
        "build:tool:images": "node --no-experimental-fetch .output/build/images.mjs",
        "build:css": "esifycss --css=pages/app.css --ext=.ts packages/components",
        "build:next": "next build",
        "build-meta": "run-s build:tool build-meta:*",
        "build-meta:pageList": "node .output/build/pageList.mjs",
        "build-meta:pageImages": "node .output/build/pageImages.mjs",
        "build-meta:sitemap": "node .output/build/sitemap.mjs",
        "build-meta:feed": "node .output/build/feed.mjs",
        "start": "NODE_ENV=production ts-node --project tsconfig.cli.json server.ts",
        "lint": "run-s build-meta lint:*",
        "lint:next": "next lint",
        "lint:eslint": "eslint --ext .ts,.tsx,.cjs,.mjs pages packages loader server.ts"
    },
    "dependencies": {
        "@nlib/typing": "0.5.7",
        "highlight.js": "11.6.0",
        "htmlparser2": "8.0.1",
        "katex": "0.16.0",
        "lowlight": "2.7.0",
        "mdast-util-footnote": "1.1.0",
        "mdast-util-from-markdown": "1.2.0",
        "mdast-util-gfm": "2.0.1",
        "micromark-extension-footnote": "1.0.2",
        "micromark-extension-gfm": "2.0.1",
        "next": "12.2.5",
        "postcss": "8.4.16",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "ts-node": "10.9.1"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.19.4",
        "@nlib/githooks": "0.1.0",
        "@squoosh/lib": "0.4.1",
        "@types/jest": "28.1.8",
        "@types/katex": "0.14.0",
        "@types/kuromoji": "0.1.1",
        "@types/react": "18.0.17",
        "@types/sharp": "0.30.5",
        "@typescript-eslint/eslint-plugin": "5.35.1",
        "@typescript-eslint/parser": "5.35.1",
        "canvas": "2.9.3",
        "esbuild": "0.15.5",
        "esifycss": "1.4.39",
        "esifycss-webpack-plugin": "0.1.3",
        "eslint-config-next": "12.2.5",
        "eslint-plugin-jest": "26.8.7",
        "jest": "28.1.3",
        "kuromoji": "0.1.2",
        "npm-run-all": "4.1.5",
        "stackblur-canvas": "2.5.0",
        "ts-jest": "28.0.8"
    },
    "browserslist": [
        ">10%"
    ],
    "jest": {
        "roots": [
            "<rootDir>/packages"
        ],
        "moduleFileExtensions": [
            "cjs",
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault|decode-named-character-reference))"
        ],
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts",
            "./.tool/**/*"
        ],
        "rules": {
            "no-unused-private-class-members": "off",
            "import/dynamic-import-chunkname": "off",
            "import/no-relative-parent-imports": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "@nlib/no-globals": "off"
                }
            },
            {
                "files": [
                    "loader/**"
                ],
                "rules": {
                    "@nlib/no-globals": "off",
                    "import/unambiguous": "off",
                    "import/no-commonjs": "off"
                }
            },
            {
                "files": [
                    "pages/**/*.tsx"
                ],
                "rules": {
                    "import/no-default-export": "off",
                    "import/no-unassigned-import": "off"
                }
            }
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
