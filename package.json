{
  "name": "@gjbkz/gojabako.zone",
  "homepage": "https://gojabako.zone/",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build-meta": "run-s build-meta:*",
    "build-meta:pageList": "node cli/generatePageList.mjs",
    "build-meta:images": "if [[ $(node -v) =~ \"v18\" ]]; then node --no-experimental-fetch cli/generateImages.mjs; else node cli/generateImages.mjs; fi",
    "build-meta:pageImages": "node cli/generatePageImages.mjs",
    "test": "run-s build-meta test:*",
    "test:type": "tsc --noEmit",
    "test:jest": "npx jest",
    "test:deadcode": "ts-prune --ignore \".css.ts|.component.tsx\"",
    "dev": "run-s build-meta dev:*",
    "dev:watch": "run-p dev:watch:*",
    "dev:watch:css": "typed-scss-modules src/components --watch --logLevel info",
    "dev:watch:next": "node server.mjs",
    "dev-next": "run-s build-meta dev-next:*",
    "dev-next:watch": "next dev",
    "build": "run-s build-meta build:*",
    "build:css": "typed-scss-modules src/components --logLevel error",
    "build:next": "next build",
    "start": "NODE_ENV=production node server.mjs",
    "lint": "run-s lint:*",
    "lint:next": "next lint",
    "lint:eslint": "eslint src *.mjs"
  },
  "dependencies": {
    "@nlib/typing": "1.1.0",
    "jose": "4.14.4",
    "meilisearch": "0.34.1",
    "next": "13.4.19"
  },
  "devDependencies": {
    "@nlib/eslint-config": "3.20.2",
    "@nlib/githooks": "0.2.0",
    "@nlib/lint-commit": "1.0.1",
    "@types/node": "20.5.8",
    "@types/react": "18.2.21",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "eslint-config-next": "13.4.19",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "typed-scss-modules": "7.1.4",
    "typescript": "5.2.2"
  },
  "browserslist": [
    ">10%"
  ],
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@nlib/eslint-config"
    ],
    "ignorePatterns": [
      "next-env.d.ts",
      "cli/*"
    ],
    "rules": {
      "no-unused-private-class-members": "off",
      "import/dynamic-import-chunkname": "off",
      "import/no-relative-parent-imports": "off"
    },
    "overrides": [
      {
        "files": [
          "*.test.*"
        ],
        "rules": {
          "max-lines-per-function": "off",
          "@typescript-eslint/no-floating-promises": "off"
        }
      },
      {
        "files": [
          "src/pages/**/*.tsx"
        ],
        "rules": {
          "import/no-default-export": "off",
          "import/no-unassigned-import": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
