{
    "name": "wemo.me",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "run-p dev:*",
        "dev:css": "esifycss --css=src/app.css --ext=.ts --watch src",
        "dev:next": "next dev",
        "build": "run-s build:*",
        "build:css": "esifycss --css=src/app.css --ext=.ts src",
        "build:next": "next build",
        "start": "next start",
        "lint": "next lint"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.25",
        "@nlib/githooks": "0.1.0",
        "@types/react": "17.0.24",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "esifycss": "1.4.35",
        "esifycss-webpack-plugin": "0.1.3",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.2",
        "lint-staged": "11.1.2",
        "lowlight": "2.3.0",
        "mdast-util-from-markdown": "1.0.2",
        "mdast-util-gfm": "1.0.0",
        "next": "11.1.2",
        "npm-run-all": "4.1.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "ts-node": "^10.2.1"
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts"
        ],
        "overrides": [
            {
                "files": [
                    "./*.js"
                ],
                "env": {
                    "node": true
                },
                "rules": {
                    "@nlib/no-globals": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
