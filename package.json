{
    "name": "gojabako.zone",
    "siteName": "Gojabako Zone",
    "authorName": "伊藤 慶 - Kei Ito",
    "homepage": "https://gojabako.zone/",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:jest": "npx jest",
        "dev": "run-s build:loader build:pageList dev:*",
        "dev:watch": "run-p dev:watch:*",
        "dev:watch:css": "esifycss --css=src/app.css --ext=.ts --watch src",
        "dev:watch:next": "ts-node --project tsconfig.cli.json server.ts",
        "build": "run-s build:*",
        "build:cli": "ts-node --project tsconfig.cli.json packages/build/cli.ts",
        "build:pageList": "node .output/build/pageList.mjs",
        "build:loader": "node .output/build/loader.mjs",
        "build:css": "esifycss --css=src/app.css --ext=.ts src",
        "build:next": "next build",
        "start": "NODE_ENV=production ts-node server.ts",
        "lint": "run-s lint:*",
        "lint:eslint": "next lint"
    },
    "dependencies": {
        "highlight.js": "11.3.1",
        "htmlparser2": "7.1.2",
        "katex": "0.13.18",
        "lowlight": "2.3.0",
        "mdast-util-footnote": "1.0.0",
        "mdast-util-from-markdown": "1.0.4",
        "mdast-util-gfm": "2.0.0",
        "micromark-extension-footnote": "1.0.2",
        "micromark-extension-gfm": "2.0.0",
        "next": "11.1.2",
        "postcss": "8.3.9",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "ts-node": "10.3.0"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.28",
        "@nlib/githooks": "0.1.0",
        "@types/jest": "27.0.2",
        "@types/katex": "0.11.1",
        "@types/react": "17.0.30",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "esbuild": "0.13.9",
        "esifycss": "1.4.35",
        "esifycss-webpack-plugin": "0.1.3",
        "eslint-config-next": "11.1.2",
        "eslint-plugin-jest": "25.0.5",
        "jest": "27.2.5",
        "lint-staged": "11.2.3",
        "npm-run-all": "4.1.5",
        "ts-jest": "27.0.5"
    },
    "browserslist": [
        ">5%",
        "not ie 11",
        "not dead"
    ],
    "jest": {
        "roots": [
            "<rootDir>/packages",
            "<rootDir>/src"
        ],
        "moduleFileExtensions": [
            "cjs",
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "node_modules/(?!(mdast-|unist-|micromark|parse-entities|character-entities|ccount|escape-string-regexp|markdown-table|lowlight|fault))"
        ],
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "ignorePatterns": [
            "next-env.d.ts",
            "./.tool/**/*"
        ],
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "@nlib/no-globals": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
